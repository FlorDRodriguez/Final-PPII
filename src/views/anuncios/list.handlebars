<div class="container p-4">

    <div class="card text-center p-4">
    </div>
    <br>
    {{#if anuncios}}
    <div class="row mx-auto justify-content-around">

        <a href="/anuncios/add" class="btn btn-success">Agregar Nuevo Anuncio</a>
    </div>

    <br>
    <br>

    <div class="row">
        {{#each anuncios}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h1> {{anuncio.titulo}} </h1>
                    <h1> {{anuncio.created_at}} </h1>
                    <a href="/anuncios/see/{{idAnuncio}}" class="btn btn-info" role="button">VER</a>
                    <a href="/anuncios/edit/{{idAnuncio}}" class="btn btn-secondary" role="button">EDITAR</a>
                    <a href="/anuncios/delete/{{idAnuncio}}" class="btn btn-danger" role="button">ELIMINAR</a>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
    {{else}}
    <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
            <p> No hay anuncios aún </p>
            <a href="/anuncios/add" class="btn btn-success"> ¡Crea uno! </a>
        </div>
    </div>
    {{/if}}
</div>